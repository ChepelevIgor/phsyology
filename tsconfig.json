{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["core/*"],
      "@pages/*": ["pages/*"],
      "@features/*": ["features/*"],
      "@widgets/*": ["widgets/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@processes/*": ["processes/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
